<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/road">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/top_bar_right_side"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="#99D9"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/top_bar_left_side"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/top_bar_left_side_first_heart"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/top_bar_left_side_second_heart"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/top_bar_left_side_third_heart"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:orientation="vertical"
        android:weightSum="21">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/first_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/first_row_first_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/first_row_second_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/first_row_third_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/second_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/second_row_first_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/second_row_second_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/second_row_third_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/third_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/third_row_first_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/third_row_second_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/third_row_third_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/fourth_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/fourth_row_first_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/fourth_row_second_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/fourth_row_third_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/fifth_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/fifth_row_first_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/fifth_row_second_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/fifth_row_third_column_block"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/block"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/sixth_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/car_icon_left"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/car"
                    android:visibility="visible"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixth_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/car_icon_center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/car"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixth_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/car_icon_right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/car"
                    android:contentDescription="@string/car_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/seventh_row_first_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/seventh_row_second_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" />
            <LinearLayout
                android:id="@+id/seventh_row_third_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        android:text="@string/start_game"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center">
    </Button>



    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/right"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/left"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>